<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sikika_streamlive"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtChannelName"
            android:textSize="18sp"
            android:text="hello world"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="@font/isidora_bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtChannelFrq"
            android:text="98.7 MhZ"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:textStyle="bold|italic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnPlay"
            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/play_pause_buttons"
            android:elevation="10dp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="play"
            android:drawableRight="@drawable/ic_play_arrow_black_24dp"/>

        <Button
            android:id="@+id/btnPause"
            android:padding="2dp"
            android:visibility="gone"
            android:background="@drawable/play_pause_buttons"
            android:elevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="pause"
            android:drawableRight="@drawable/ic_pause_black_24dp"/>

    </LinearLayout>
</LinearLayout>